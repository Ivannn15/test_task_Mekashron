@inject IWebHostEnvironment Env
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Mekashron Login</title>
    @{
        var cssPath = System.IO.Path.Combine(Env.WebRootPath ?? string.Empty, "css", "site.css");
        var inlineCss = System.IO.File.Exists(cssPath) ? System.IO.File.ReadAllText(cssPath) : string.Empty;
    }
    @if (!string.IsNullOrWhiteSpace(inlineCss))
    {
        <style>@Html.Raw(inlineCss)</style>
    }
</head>
<body class="d-flex flex-column min-vh-100 bg-body-secondary">
    <header class="shadow-sm bg-white">
        <nav class="navbar navbar-expand-md navbar-light container py-3">
            <a class="navbar-brand fw-bold" href="/">LOGO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto gap-md-3 text-uppercase fw-semibold small">
                    <li class="nav-item"><a class="nav-link" href="#">Menu 1</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Menu 2</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Menu 3</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="py-4 text-center small text-muted bg-white border-top">
        <div class="container">&copy; @DateTime.UtcNow.Year Mekashron Test Task</div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggler = document.querySelector('[data-bs-toggle="collapse"]');
            const targetSelector = toggler ? toggler.getAttribute('data-bs-target') || toggler.getAttribute('data-target') : null;
            const target = targetSelector ? document.querySelector(targetSelector) : null;

            if (!toggler || !target) {
                return;
            }

            const handleResize = () => {
                if (window.innerWidth >= 768) {
                    target.classList.add('show');
                    toggler.setAttribute('aria-expanded', 'true');
                }
                else if (!toggler.classList.contains('manual-open')) {
                    target.classList.remove('show');
                    toggler.setAttribute('aria-expanded', 'false');
                }
            };

            toggler.addEventListener('click', function (event) {
                event.preventDefault();
                const isExpanded = target.classList.toggle('show');
                toggler.setAttribute('aria-expanded', isExpanded ? 'true' : 'false');
                toggler.classList.toggle('manual-open', isExpanded);
            });

            window.addEventListener('resize', () => {
                toggler.classList.remove('manual-open');
                handleResize();
            });

            handleResize();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
